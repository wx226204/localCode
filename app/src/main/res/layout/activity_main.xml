<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:background="#657E7C7C"
        android:orientation="vertical"
        android:padding="8dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/dpp_cc4_search"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:background="@drawable/dpp_cc4_search_shape"
            android:gravity="center_vertical"
            android:paddingStart="8dp"
            android:text="TextView"
            android:textColor="#BE0277BD" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="174dp"
            android:orientation="horizontal">

            <com.example.hellowrod.open.source.Banner
                android:id="@+id/dpp_cc4_list_banner"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dpp_cc4_bottom_container"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="#75E1B8B8"
            android:orientation="horizontal">
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>